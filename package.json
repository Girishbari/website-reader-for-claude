{
  "name": "website-reader-for-claude",
  "displayName": "Website Reader for Claude",
  "version": "1.0.0",
  "author": "**",
  "description": "Auto-extract website content for Claude. Paste URLs and instantly share complete webpages with claude.ai - no copying needed.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "react",
    "vite",
    "create-chrome-ext"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'",
    "zip": "npm run build && node src/zip.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.20",
    "gulp": "^5.0.0",
    "gulp-zip": "^6.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  }
}
